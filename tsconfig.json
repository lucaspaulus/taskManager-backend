{
  "compilerOptions": {
    "target": "es2022",                                  
    "module": "commonjs",                               
    "strict": true,                      
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,                                         
    "skipLibCheck": true,
    "rootDir": "./src",                                 
    "outDir": "./build",                              
  },
  "exclude": ["node_modules", "./src/__tests__"],
  "include": ["./src/**/*.ts"]
}
